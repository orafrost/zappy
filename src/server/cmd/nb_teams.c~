#include "zappy.h"

int	nb_teams(t_zappy *zappy, t_player *player)
{
  char	*msg;
  int	size;

  size = intlen(player->max);
  if ((msg = malloc(size + 1)) == NULL)
    return (puterr("Function 'malloc' failed."));
  memset(msg, 0, size + 1);
  sprintf(msg, "%d\n", player->max);
  send(player->client->socket, msg, size, 0);
  free(msg);
  return (0);
}
